<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#91F0C6"
    tools:context=".RegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up Page"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_email_id_here"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:inputType="text"
        android:id="@+id/edt_email_register"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_password"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:id="@+id/edt_password_register"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_password_to_confirm"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:id="@+id/edt_password_register1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sign_up"
        android:padding="20dp"
        android:background="#009688"
        android:id="@+id/btn_register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Register ( Login Here ) !"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/txt_login"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B81515"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>